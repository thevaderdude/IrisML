<h1 class="row justify-content-center">
    Single-Variable Linear Regression Demo
</h1>

<div class="container round mb-5">

  <div class="py-4 pl-3 d-flex">
    <button type="submit" id="slin-start" class="btn btn-success">Start</button>
    <button type="button" id="slin-reset"class="btn btn-danger ml-3">Reset</button>
  </div>

  <form class="mb-2 pl-3">
    <div class="form-group">
      <label for="exampleFormControlFile1">Upload Personal Dataset</label>
      <input type="file" class="form-control-file" id="slin-file">
    </div>
  </form>

  <div class="row justify-content-center pb-5 px-4">
    <div id="scatter" class="white"></div>
    <canvas id="slin-chart" width='100'></canvas>
  </div>

  <div class="row m-auto pb-4">
    <div class="col d-flex flex-row justify-content-center mx-xl-5 mx-lg-5 mx-md-0">
      <div class="input-group mb-auto">
        <div class="input-group-prepend">
          <span class="input-group-text">Alpha</span>
        </div>
        <input form="slin-training" type="number" class="form-control" placeholder="0.03" id="slin-alpha" name="slin[alpha]">
      </div>
    </div>
    <div class="col d-flex flex-row justify-content-center mx-xl-5 mx-lg-5 mx-md-0">
      <div class="input-group mb-auto">
        <div class="input-group-prepend">
          <span class="input-group-text">Lambda</span>
        </div>
        <input form="slin-training" type="number" class="form-control" placeholder="0.3" id="slin-lambda" name="slin[lambda]">
      </div>
    </div>
  </div>
  <div class="row m-auto pb-4">
    <div class="col d-flex flex-row justify-content-center mx-xl-5 mx-lg-5 mx-md-0">
      <div class="input-group mb-auto">
        <div class="input-group-prepend">
          <span class="input-group-text">Epochs</span>
        </div>
        <input form="slin-training" type="number" class="form-control" placeholder="500" id="slin-epochs" name="slin[epochs]">
      </div>
    </div>
    <div class="col d-flex flex-row justify-content-center mx-xl-5 mx-lg-5 mx-md-0">
      <div class="input-group mb-auto">
        <div class="input-group-prepend">
          <span class="input-group-text">Batch Size</span>
        </div>
        <input form="slin-training" type="number" class="form-control" placeholder="30" id="slin-batchSize" name="slin[batchSize]">
      </div>
    </div>
  </div>

<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
